// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          Role      @default(USER)
  accounts      Account[]
  sessions      Session[]
  properties    Property[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Property {
  id          String   @id @default(cuid())
  title       String
  city        String
  area        String
  purpose     PropertyPurpose
  type        PropertyType
  priceDisplay String
  price       Int
  size        Int
  beds        String
  rating      Float
  image       String
  tag         String?
  description String? @db.Text
  isActive    Boolean  @default(true)
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  propertyImages PropertyImage[]
  
  // Coworking specific fields
  workspaceName String? // e.g., "Work Square - Sumer Plaza, Andheri (E)"
  workspaceTimings String? // e.g., "10:00 am - 6:00 pm (Mon to Sat)"
  workspaceClosedDays String? // e.g., "Closed (Sun)"
  amenities Json? // Array of amenity objects with icon and name
  locationDetails String? // e.g., "Sumer Plaza, Sankasth Pada Welfare Society, Marol, Andheri East, Mumbai, Maharashtra"
  metroStationDistance String? // e.g., "2 km away from Marol Naka Metro Station"
  railwayStationDistance String? // e.g., "3.5 km away from Andheri Railway Station"
  aboutWorkspace String? @db.Text // e.g., "one of the best business centres in Marol..."
  capacity Int? // e.g., 220+ seats
  superArea Int? // e.g., 10000+ sq ft
  
  // Property options (max 3)
  propertyOptions Json? // Array of option objects with title, description, image, price, seating, etc.
  
  // Office timing
  officeTiming Json? // Object with mon-fri, sat, sun timing
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PropertyImage {
  id        String   @id @default(cuid())
  imageUrl  String
  propertyId String
  property  Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model ContactForm {
  id        String   @id @default(cuid())
  name      String
  mobile    String
  email     String
  solution  String
  message   String?
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Requirement {
  id        String   @id @default(cuid())
  name      String
  mobile    String
  email     String
  interest  String?
  company   String?
  teamSize  String?
  status    String   @default("new")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model City {
  id        String   @id @default(cuid())
  name      String   @unique
  areas     Area[]
  createdAt DateTime @default(now())
}

model Area {
  id        String   @id @default(cuid())
  name      String
  cityId    String
  city      City     @relation(fields: [cityId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}

enum PropertyPurpose {
  RENT
  BUY
  COMMERCIAL
}

enum PropertyType {
  RESIDENTIAL
  COMMERCIAL
  COWORKING
  MANAGED_OFFICE
}
